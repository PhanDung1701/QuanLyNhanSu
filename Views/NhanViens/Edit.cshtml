@model QuanLyNhanSu.Models.NhanVien

@{
    ViewData["Title"] = "Cập nhật nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Cập nhật nhân viên</h5>
            </div>
            <div class="card-body">
                <form asp-controller="NhanViens" asp-action="Edit" asp-route-id="@Model.MaNhanVien" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MaNhanVien" />
                    <!-- Form Group (username)-->
                    <div class="mb-3">
                        <label class="form-label">Họ Tên</label>
                        <input class="form-control" type="text" asp-for="HoTen">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Ảnh đại diện</label>
                        <input type="file" name="Anhdaidien" class="form-control" />
                        <span asp-validation-for="Anhdaidien" class="text-danger"></span>
                    </div>
                    <!-- Form Row-->
                    <div class="row gx-3 mb-3">
                        <!-- Form Group (first name)-->
                        <div class="mb-3">
                            <label class="form-label">Chức vụ</label>
                            <select asp-for="MaChucVu" asp-items="@ViewBag.MaChucVu" class="form-select" required>
                                <option></option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Phòng ban</label>
                            <select asp-for="MaPhongBan" asp-items="@ViewBag.MaPhongBan" class="form-select" required>
                                <option></option>
                            </select>
                        </div>
                    </div>
                    <!-- Form Row        -->
                    <div class="row gx-3 mb-3">
                        <!-- Form Group (organization name)-->
                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input class="form-control" type="text" asp-for="Email">
                        </div>
                        <!-- Form Group (location)-->
                        <div class="col-md-6">
                            <label class="form-label">Số điện thoại</label>
                            <input class="form-control" type="text" asp-for="SoDienThoai">
                        </div>
                    </div>
                    <!-- Form Row-->
                    <div class="row gx-3 mb-3">
                        <!-- Form Group (phone number)-->
                        <div class="col-md-6">
                            <label class="form-label">Địa chỉ</label>
                            <input class="form-control" type="text" asp-for="DiaChi">
                        </div>
                        <!-- Form Group (birthday)-->
                        <div class="col-md-6">
                            <label class="form-label">Chứng minh nhân dân</label>
                            <input class="form-control" type="text" asp-for="Cmnd">
                        </div>
                    </div>
                    <div class="row gx-3 mb-3">
                        <!-- Form Group (phone number)-->
                        <div class="col-md-6">
                            <label class="form-label">Ngày sinh</label>
                            <input class="form-control" type="date" asp-for="NgaySinh">
                        </div>
                        <!-- Form Group (birthday)-->
                        <div class="col-md-6">
                            <label class="form-label">Dân tộc</label>
                            <input class="form-control" type="text" asp-for="DanToc">
                        </div>
                    </div>
                    <div class="row gx-3 mb-3">
                        <div class="mb-3">
                            <label class="form-label">Trạng thái</label>
                            <select asp-for="TrangThai" class="form-select" required>
                                <option>Trạng thái</option>
                                <option value="Đang làm việc">Đang làm việc</option>
                                <option value="Nghỉ việc">Nghỉ việc</option>
                                <option value="Nghỉ phép">Nghỉ phép</option>
                            </select>
                        </div>
                        <div class="form-check form-switch mb-2">
                            <input class="form-check-input" type="checkbox" asp-for="TruongPhong">
                            <label class="form-check-label">Trưởng phòng</label>
                        </div>
                    </div>
                    <!-- Save changes button-->
                    <div class="form-group">
                        <a href="/NhanViens/Index" class="btn btn-danger">Quay lại</a>
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
